generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id         String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firstName  String
  lastName   String
  profession String
  balance    Decimal  @db.Decimal(10, 2) // Tipo Decimal con 2 decimales
  type       ProfileType
  

  @@map("Profiles")
}

enum ProfileType {
  client
  contractor
}